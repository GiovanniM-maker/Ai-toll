{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "nuxt.config.{js,ts}",
    "components/**/*.{vue,ts}",
    "pages/**/*.{vue,ts}",
    "stores/**/*.{ts,js}",
    "plugins/**/*.{ts,js}",
    "**/*.ts",
    "**/*.vue"
  ]
}
